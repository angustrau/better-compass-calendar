    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/index.ts",
            "env": {
                "PORT": "3001",
                "NODE_ENV": "dev"
            },
            "sourceMaps": true,
            "preLaunchTask": "server/ts-watch",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}